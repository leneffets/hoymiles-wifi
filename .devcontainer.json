{
    "name": "Python 3.12 Development Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
    ],
    "postCreateCommand": "pip install -r requirements.txt && apt install -y rrdtool",
    "initializeCommand": "mkdir -p data",
    "runArgs": [
        "--network", "host",
        "--mount", "type=bind,source=${localWorkspaceFolder}/data,target=/workspace/data,consistency=cached" // Adjusted mount syntax
    ]
}
